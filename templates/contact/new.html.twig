{% extends 'base.html.twig' %}

{% block title %} - Contact {% endblock %}

{% block body %}
<div class="container">
    <h1>Contact</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label for="lastname">Nom *</label>
            {{ form_widget(form.lastname, { 
                "attr": {"class": "form-control my-2", "placeholder": "Nom *"}
            }) }}
        </div>
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label for="firstname">Prénom *</label>
            {{ form_widget(form.firstname, { 
                "attr": {"class": "form-control my-2", "placeholder": "Prénom *"}
            }) }}
        </div>
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label for="email">Email *</label>
            {{ form_widget(form.email, { 
                "attr": {"class": "form-control my-2", "placeholder": "Email *"}
            }) }}
        </div>
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label for="subject">Sujet *</label>
            {{ form_widget(form.subject, { 
                "attr": {"class": "form-control my-2", "placeholder": "Sujet *"}
            }) }}
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12">
                <label for="message">Sujet *</label>
            {{ form_widget(form.message, { 
                "attr": {"class": "form-control my-2", "placeholder": "Message *"}
            }) }}
        </div>
    </div>
    <div class="text-center my-3">
            <button class="btn btn-primary">Envoyer</button>
    </div>
  
    {{ form_end(form) }}

{% endblock %}
