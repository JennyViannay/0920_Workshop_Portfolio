{% extends 'base.html.twig' %}

{% block title %} - Accueil{% endblock %}

{% block body %}
<div class="container text-center">
    <div class="text-right">
        <a href="{{path('home')}}" class="btn btn-primary">Revenir en arri√®re</a>
    </div>
    <h1 class="display-4">{{project.title}}</h1>
    <div class="row mt-5">
        <img src="{{asset('assets/uploads/images/' ~ project.illustration.image )}}" class="img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{project.title}}</h5>
            <p class="card-text">Pitch : {{project.pitch}}</p>
            <p class="card-text">
                {% for techno in project.technos %}
                    #{{techno.name}} 
                {% endfor %}
            </p>
            <p class="card-text">Context : {{project.context}}</p>
            <p class="card-text">Description : {{project.description}}</p>
            <p class="card-text">Date : {{project.createdAt|date("m/d/Y")}}</p>
            <p class="card-text">Github : {{project.linkGithub}}</p>
            <p class="card-text">Demo :{{project.linkDemo}}</p>
        </div>
    </div>
</div>
{% endblock %}