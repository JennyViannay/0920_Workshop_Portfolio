{% extends 'base.html.twig' %}

{% block title %} - Accueil{% endblock %}

{% block body %}
<div class="container">
    <h1>Accueil</h1>
    <div class="row">
        <div class="jumbotron">
            <h3>Filtres</h3>
            <form method="POST">
                {% for techno in technos %}
                <button type="submit" name="id_techno" value="{{techno.id}}">{{techno.name}}</button>
                {% endfor %}
            </form>
        </div>
    </div>
    <div class="row">
        {% for project in projects %}
        <div class="col-lg-4 col-md-6 col-xs-12">
            <div class="card">
                <img src="{{asset('assets/uploads/images/' ~ project.illustration.image )}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{project.title}}</h5>
                    <p class="card-text">{{project.pitch}}</p>
                    <a href="{{ path('show_project', { id: project.id}) }}" class="btn btn-primary">Voir</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
